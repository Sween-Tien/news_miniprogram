/* 全局样式 */
.container {
  padding: 20px;
}
.search-bar {
  display: flex;
  margin-bottom: 20px;
  
}
.search-bar input {
  flex: 1;
  margin-right: 10px;
  border: 1px solid #d3d3d3;
  height: 50px;
  width: 250px;
  border-radius: 10px;
  padding-left: 10px;
}

.search-bar button {
  width: 50px;
  height: 50px;
  background-color: #cda4e0;
  border-radius: 10px;
}

.search-bar .search-icon {
  width: 100%;
  height: 100%;
}

.carousel {
  height: 160px;
  margin-bottom: 10px;
}

.carousel-image {
  width: 100%;
  height: 100%;
  border-radius: 15px; /* 倒角 */
  opacity: 0.6; /* 降低透明度 */
  width: calc(100% - 10px); /* 减去间隙宽度 */
  margin-right:1px;
  margin-left: 1px;
}

.carousel-text {
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translateX(-50%);
  color: rgb(48, 48, 48);
  padding: 5px 10px;
  font-size: 30px;
  font-weight: 1000;
  text-align: center;
}

.modules {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20px;
}

.module-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 1560px; /* Adjust button width */
  height: 120px; /* Adjust button height */
  background-color: #ceb6da;
  border: none;
  border-radius: 10px; /* Optional for rounded buttons */
  margin: 10px; /* Space between buttons */
  font-size: 18px;
  color: #333;
}
.module-button .button-icon {
  width: 60px; /* Adjust image width */
  height: 60px; /* Adjust image height */
  margin-bottom: 5px; /* Space between image and text */
}

.module-button .button-text {
  margin-top: 80px; /* Move the text downward */
}

.recommendations {
  margin-top: 20px;
}
.article-item {
  display: flex;
  align-items: center;  /* 垂直居中 */
  padding: 10px 0;
  border-bottom: 1px solid #ddd;  /* 为每个项目添加分隔线 */
  cursor: pointer;  /* 鼠标悬停时显示可点击样式 */
}

.article-image {
  width: 100px;  /* 设置图片宽度 */
  height: 100px;  /* 设置图片高度 */
  object-fit: cover;  /* 保持图片比例 */
  border-radius: 8px;  /* 图片圆角 */
  margin-right: 15px;  /* 图片与标题之间的间距 */
}

.article-content {
  flex: 1;  /* 标题部分占用剩余空间 */
}

.article-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}